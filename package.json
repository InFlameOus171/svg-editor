{
  "name": "@inflameous/svg-editor-wc",
  "description": "Webcomponent svg-editor following open-wc recommendations",
  "license": "MIT",
  "author": "Yasin Calli",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "scripts": {
    "lint_fix": "eslint ./src/**/*.ts --fix",
    "lint_check": "eslint ./src/**/*.ts",
    "get_size_of_bundle": "node getSizeOfFile ./build/svg-editor.js",
    "rename_to_old": "node rename.js ./build/svg-editor.js ./build/svg-editor.old.js",
    "minify_bundle": "minify ./build/svg-editor.old.js > ./build/svg-editor.js && node removeOldIndex.js ./build/svg-editor.old.js",
    "start": "npm run check_for_circular_deps && tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "check_for_circular_deps": "madge --extensions ts --circular --exclude \".*\\.types.ts|typeguards.ts\" ./src",
    "build": "tsc && rollup -c && npm run rename_to_old && npm run minify_bundle && npm run get_size_of_bundle",
    "test": "jest"
  },
  "dependencies": {
    "lit": "^2.0.2",
    "nanoid": "^3.1.30"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@web/dev-server": "^0.1.22",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "^0.3.13",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/test-runner": "next",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.1",
    "minify": "^8.0.3",
    "prettier": "^2.4.1",
    "rollup": "^2.56.3",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": 1,
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InFlameOus171/svg-editor.git"
  },
  "keywords": [
    "svg-editor",
    "web",
    "component"
  ],
  "bugs": {
    "url": "https://github.com/InFlameOus171/svg-editor/issues"
  },
  "homepage": "https://github.com/InFlameOus171/svg-editor#readme"
}
